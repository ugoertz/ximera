div#scroller-anchor
nav#scroller.navbar.navbar-default.navbar-fixed-top.affix-top(role='navigation')
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href="/")
        | <span style="font-weight: 200;">XIMERA-Seiten von Ulrich GÃ¶rtz</span>
    .navbar-collapse.collapse
      ul.nav.navbar-nav.navbar-right(ng-controller="ScoreController")
         li
           span.navbar-progress-bar(completion-meter="")
         li.ng-cloak(ng-if="scores.xarma >= 0")
           a(href="/about/xarma", highlight-on-change="{{scores.xarma}}")
             i.fa.fa-gift
             | &nbsp;{{scores.xarma}} Xarma
         li.ng-cloak(ng-if="scores.xudos >= 0")
           a(href="/about/xudos", highlight-on-change="{{scores.xudos}}")
             i.fa.fa-thumbs-up 
             | &nbsp;{{scores.xudos}} Xudos
         if (user) && (!user.isGuest)
           // This also, confusingly, manages to send the user object over to Angular
           li.dropdown(ng-init="user=#{JSON.stringify(user)}")
             a.dropdown-toggle(href="#",data-toggle="dropdown", ng-controller="LoginController")
               | <i class="fa fa-user"></i> #{user.name} 
               b.caret
             ul(id="login-menu").dropdown-menu
               //li
               //  a(href="/users/profile") <i class='fa fa-cogs'></i> Profil
               li
                 a(href="/logout") <i class='fa fa-sign-out'></i> Abmelden
         else
           li
             a(href="/auth/google") <i class='fa fa-sign-in'></i> Anmelden mit Google-Nutzerkennung
