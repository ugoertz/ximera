div
  div.btn-group-vertical(data-toggle="buttons")
    label.btn.btn-default(ng-repeat='choice in db.choices',ng-click='activate(choice.value)',ng-class='{active: db.radioValue === choice.value}',ng-disabled='db.success && (db.radioValue != choice.value)')
      input(type='radio',ng-model='db.radioValue',name='{{db.radioGroup}}',value='{{choice.value}}')
      span(ng-bind-html="choiceLabelsByUuid[choice.uuid]")
  div.btn-group(ng-switch="",on='db.message',style="vertical-align: bottom; padding-left: 1em;")
    button.btn.btn-success(ng-click='attemptAnswer()',ng-switch-when="correct",data-toggle="tooltip",data-placement="top",title="Die Antwort ist richtig!")
      i.fa.fa-check
      | &nbsp;Richtig
    button.btn.btn-danger(ng-click='attemptAnswer()',ng-switch-when="incorrect",data-toggle="tooltip",data-placement="top",title="Falsch. Versuchen Sie es noch einmal!")
      i.fa.fa-times
      | &nbsp;Nochmal versuchen
    button.btn.btn-primary(ng-click='attemptAnswer()',ng-switch-default,data-toggle="tooltip",data-placement="top",title="Klicken Sie, um die Antwort zu 端berpr端fen.",ng-disabled="{{!db.radioValue}}")
      i.fa.fa-question
      | &nbsp;Antwort 端berpr端fen
